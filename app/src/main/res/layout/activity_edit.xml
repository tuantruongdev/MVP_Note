<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:orientation="vertical"
    tools:context=".ui.editor.EditActivity">

    <RelativeLayout
        android:id="@+id/layoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginLeft="@dimen/margin_horizontal_medium"
        android:layout_marginTop="@dimen/margin_horizontal_small"
        android:layout_marginRight="@dimen/margin_horizontal_medium">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/edit_icon_size"
            android:layout_height="@dimen/edit_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_marginRight="@dimen/margin_horizontal_medium"
                android:id="@+id/imageIcon"
                android:layout_width="@dimen/edit_icon_size"
                android:layout_height="@dimen/edit_icon_size"
                android:src="@drawable/ic_baseline_image_24" />
            <ImageView
                android:id="@+id/done"
                android:layout_width="@dimen/edit_icon_size"
                android:layout_height="@dimen/edit_icon_size"
                android:src="@drawable/ic_baseline_done_24" />

        </LinearLayout>
    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <EditText
                android:textStyle="bold"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title here"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/edit_text_title_size"
                android:background="@color/bg_dark"
                />
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/noteImg"
                    />
            <EditText
                android:id="@+id/desc"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="start"
                android:lines="30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="description here"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/edit_text_desc_size"
                android:background="@color/bg_dark"
                />

        </LinearLayout>
        </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcsds"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>